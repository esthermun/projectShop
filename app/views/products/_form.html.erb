
<%= form_for @product, :html => {:multipart => true} do |f| %>
	<% if @product.errors.any? %>
		<div id="error_explanation" class="error-box bg-danger">
		  <h4 class="text-warning"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>

		  <ul>
		  <% @product.errors.full_messages.each do |message| %>
		    <li class="text-warning"><%= message %></li>
		  <% end %>
		  </ul>
		</div>
	<% end %>
	
	<div class="form-group">
		<%= label_tag :name %>
		<%= f.text_field(:name, :class =>"form-control") %>
	</div>
	<div class="form-group">
		<%= label_tag :sku, "Product sku: " %>
		<%= f.text_field(:sku, :class =>"form-control") %>
	</div>
	<div class="form-group">
    	<%= f.label :category_id %>
    	<%= f.collection_select(:category_id, @categories, :id, :name) %>
  	</div>
  	<div class="form-group">
		<%= label_tag :price %>
		<%= f.text_field(:price, :class =>"form-control") %>
	</div>
	<div class="form-group">
		<%= label_tag :description %>
		<%= f.text_area(:description, :class => "form-control", :rows => "15") %>
	</div>
	<div class="form-group">
		<%= label_tag :quantity %>
		<%= f.number_field(:quantity, :class =>"form-control") %>
	</div>
	
	<div class="form-group">
		<%= label_tag :image, "Add images: " %>
		<%= f.file_field :images, :multiple => true  %>
	</div>
	<div class="form-group">
		<%= f.submit :class => "btn btn-info" %>
	</div>

<% end %>