
<h1 class="text-center title">All Products</h1>

<div class="product_index">
	<div class="row">
	<% @products.each do |product| %>
		<div class="col-xs-6 col-md-4">
			<div class="thumbnail">
				<%= image_tag product.image.url(:small)%>
				<div class="caption">
					<h3><a href="<%= product_path(product.id) %>"><%= product.name %></a> </h3>
					<p><%= product.category.name %></p>
					<p><%= product.description %></p>
					<p>
						Qty: <input type="number" class="qty">
						
						<a href="#" class="btn btn-default" role="button">Add to Cart</a>
							
					
					</p>
				</div>
			</div>
		</div>
	<% end %>
</div>
</div>
